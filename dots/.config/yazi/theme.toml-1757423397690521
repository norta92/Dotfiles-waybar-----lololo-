[manager]
cwd = { fg = "#c6c4dd", bold=true}

hovered         = { fg = "#e2dfff", bg = "#414178" }
preview_hovered = { underline = true, bold=true }


[status]
separator_open  = ""
separator_close = ""
separator_style = { fg = "#e2dfff", bg = "#414178" }

# Mode
mode_normal = { fg = "#2a2a60",   bg = "#c2c1ff", bold = true }
mode_select = { fg = "#2f2f42", bg = "#c6c4dd", bold = true }
mode_unset  = { fg = "#47263a",  bg = "#e9b9d2", bold = true }

[which]
mask            = { bg = "#1f1f25" }
cand            = { fg = "#c2c1ff" }
desc            = { fg = "#c6c4dd" }
separator       = " îªœ "
separator_style = { fg = "#e9b9d2" }

[filetype]
rules = [
	# Images
	{ mime = "image/*", fg = "#c6c4dd" },

	# Videos
	{ mime = "video/*", fg = "#e9b9d2" },
	{ mime = "audio/*", fg = "#e9b9d2" },

	# Archives
	{ mime = "application/zip",             fg = "#ffb4ab" },
	{ mime = "application/gzip",            fg = "#ffb4ab" },
	{ mime = "application/x-tar",           fg = "#ffb4ab" },
	{ mime = "application/x-bzip",          fg = "#ffb4ab" },
	{ mime = "application/x-bzip2",         fg = "#ffb4ab" },
	{ mime = "application/x-7z-compressed", fg = "#ffb4ab" },
	{ mime = "application/x-rar",           fg = "#ffb4ab" },

	# Fallback
	{ name = "*", fg = "#c2c1ff", bold=true },
	{ name = "*/", fg = "#c6c4dd", bold=true }
]
