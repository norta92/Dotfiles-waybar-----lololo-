# Mode
mode_normal = { fg = "#153809",   bg = "#a7d293", bold = true }
mode_select = { fg = "#273421", bg = "#bccbb1", bold = true }
mode_unset  = { fg = "#003738",  bg = "#a0cfd1", bold = true }

[which]
mask            = { bg = "#1d211b" }
cand            = { fg = "#a7d293" }
