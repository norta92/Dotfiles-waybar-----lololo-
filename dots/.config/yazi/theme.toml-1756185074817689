[manager]
cwd = { fg = "#b8ccb5", bold=true}

hovered         = { fg = "#b8f1b9", bg = "#1d5128" }
preview_hovered = { underline = true, bold=true }


[status]
separator_open  = ""
separator_close = ""
separator_style = { fg = "#b8f1b9", bg = "#1d5128" }

# Mode
mode_normal = { fg = "#013913",   bg = "#9cd49f", bold = true }
mode_select = { fg = "#243425", bg = "#b8ccb5", bold = true }
mode_unset  = { fg = "#00363d",  bg = "#a1ced6", bold = true }

[which]
mask            = { bg = "#1c211c" }
cand            = { fg = "#9cd49f" }
desc            = { fg = "#b8ccb5" }
separator       = " îªœ "
separator_style = { fg = "#a1ced6" }

[filetype]
rules = [
	# Images
	{ mime = "image/*", fg = "#b8ccb5" },

	# Videos
	{ mime = "video/*", fg = "#a1ced6" },
	{ mime = "audio/*", fg = "#a1ced6" },

	# Archives
	{ mime = "application/zip",             fg = "#ffb4ab" },
	{ mime = "application/gzip",            fg = "#ffb4ab" },
	{ mime = "application/x-tar",           fg = "#ffb4ab" },
	{ mime = "application/x-bzip",          fg = "#ffb4ab" },
	{ mime = "application/x-bzip2",         fg = "#ffb4ab" },
	{ mime = "application/x-7z-compressed", fg = "#ffb4ab" },
	{ mime = "application/x-rar",           fg = "#ffb4ab" },

	# Fallback
	{ name = "*", fg = "#9cd49f", bold=true },
	{ name = "*/", fg = "#b8ccb5", bold=true }
]
