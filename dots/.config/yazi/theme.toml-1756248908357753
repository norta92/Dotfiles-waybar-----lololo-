[manager]
cwd = { fg = "#c2c5dd", bold=true}

hovered         = { fg = "#dde1ff", bg = "#374379" }
preview_hovered = { underline = true, bold=true }


[status]
separator_open  = ""
separator_close = ""
separator_style = { fg = "#dde1ff", bg = "#374379" }

# Mode
mode_normal = { fg = "#202c61",   bg = "#b8c4ff", bold = true }
mode_select = { fg = "#2c2f42", bg = "#c2c5dd", bold = true }
mode_unset  = { fg = "#44273f",  bg = "#e4bad9", bold = true }

[which]
mask            = { bg = "#1f1f25" }
cand            = { fg = "#b8c4ff" }
